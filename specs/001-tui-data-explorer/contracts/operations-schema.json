{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Operation Schema",
  "description": "JSON schema for validating Operation parameters in kittiwake TUI Data Explorer",
  "type": "object",
  "required": ["operation_type", "params", "display"],
  "properties": {
    "operation_type": {
      "type": "string",
      "enum": [
        "filter",
        "search",
        "aggregate",
        "pivot",
        "join",
        "select",
        "drop",
        "rename",
        "with_columns",
        "sort",
        "unique",
        "fill_null",
        "drop_nulls",
        "head",
        "tail",
        "sample"
      ],
      "description": "The type of operation to perform"
    },
    "params": {
      "type": "object",
      "description": "Parameters specific to the operation type",
      "oneOf": [
        {
          "if": {
            "properties": { "operation_type": { "const": "filter" } }
          },
          "then": {
            "required": ["column", "operator", "value"],
            "properties": {
              "column": { "type": "string" },
              "operator": {
                "type": "string",
                "enum": ["==", "!=", ">", "<", ">=", "<=", "contains"]
              },
              "value": { "type": ["string", "number", "boolean"] }
            }
          }
        },
        {
          "if": {
            "properties": { "operation_type": { "const": "search" } }
          },
          "then": {
            "required": ["query"],
            "properties": {
              "query": { "type": "string", "minLength": 1 }
            }
          }
        },
        {
          "if": {
            "properties": { "operation_type": { "const": "aggregate" } }
          },
          "then": {
            "required": ["group_by_cols", "agg_col", "agg_func"],
            "properties": {
              "group_by_cols": {
                "type": "array",
                "items": { "type": "string" },
                "minItems": 1
              },
              "agg_col": { "type": "string" },
              "agg_func": {
                "type": "string",
                "enum": ["sum", "mean", "count", "min", "max", "median", "std"]
              }
            }
          }
        },
        {
          "if": {
            "properties": { "operation_type": { "const": "select" } }
          },
          "then": {
            "required": ["columns"],
            "properties": {
              "columns": {
                "type": "array",
                "items": { "type": "string" },
                "minItems": 1
              }
            }
          }
        },
        {
          "if": {
            "properties": { "operation_type": { "const": "sort" } }
          },
          "then": {
            "required": ["columns", "descending"],
            "properties": {
              "columns": {
                "type": "array",
                "items": { "type": "string" },
                "minItems": 1
              },
              "descending": {
                "type": "array",
                "items": { "type": "boolean" }
              }
            }
          }
        }
      ]
    },
    "display": {
      "type": "string",
      "maxLength": 200,
      "description": "Human-readable description of the operation"
    }
  }
}
